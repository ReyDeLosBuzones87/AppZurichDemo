<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/marginLayout"
    android:background="@color/white"
    android:padding="@dimen/padding_l">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/marginLayout"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context="com.deuzex.seguros.activities.promotor.MainPromotorActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nextFocusDown="@string/etSearch"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo_stk"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_margin="@dimen/marginLayout"
                android:contentDescription="@string/logoSTK"
                android:src="@drawable/logo1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/sp_search"
                    style="@style/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/search_array" />

                <Button
                    android:id="@+id/btnSearch"
                    style="@style/btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_style"
                    android:drawableStart="@android:drawable/ic_menu_search"
                    android:minWidth="30dp"
                    android:paddingEnd="@dimen/marginLayout"
                    android:paddingStart="@dimen/marginLayout" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_xl"
                android:layout_marginTop="@dimen/padding_xl"
                android:text="@string/menu_usuario"
                android:textSize="@dimen/txt_m" />

            <Button
                android:id="@+id/btnNewUser"
                style="@style/btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_style"
                android:text="@string/nuevo_usuario" />

            <Button
                android:id="@+id/btnUserData"
                style="@style/btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_style"
                android:text="@string/listado_usuarios" />

            <Button
                android:id="@+id/btnDeleteUser"
                style="@style/btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_style"
                android:text="@string/elimina_usuario" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_xl"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    style="@style/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_xl"
                    android:layout_marginTop="@dimen/padding_l"
                    android:text="@string/menu_poliza"
                    android:textSize="@dimen/txt_m" />

                <Button
                    android:id="@+id/btnNewSecure"
                    style="@style/btn"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_style"
                    android:text="@string/nueva_poliza" />

                <Button
                    android:id="@+id/btnSecureData"
                    style="@style/btn"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_style"
                    android:text="@string/listado_polizas" />

                <Button
                    android:id="@+id/btnDeleteSecure"
                    style="@style/btn"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_style"
                    android:text="@string/elimina_poliza" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_menu_asegurado"
                    style="@style/btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ACTIVITY ASEGURADO" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
