<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/padding_xl"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.deuzex.seguros.activities.asegurado.DocumentacionActivity">

    <TextView
        style="@style/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_documentos"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/txt_l" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginLayout"
        android:orientation="vertical">

        <TableRow>

            <ImageView
                android:layout_height="100dp"
                android:layout_column="1"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/poliza1" />

            <ImageView
                android:layout_height="100dp"
                android:layout_column="2"
                android:layout_weight="2"
                android:scaleType="fitCenter"
                android:src="@drawable/poliza2" />
        </TableRow>
    </TableLayout>
</LinearLayout>
