<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/padding_xl"
    tools:context="com.deuzex.seguros.activities.promotor.DatosPolizaActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_m"
        android:text="@string/dpoliza_titulo"
        android:textColor="@color/zurich_blue2"
        android:textSize="@dimen/txt_m" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:paddingTop="@dimen/marginLayout">

            <TextView
                style="@style/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tvPolicyNo"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/txt_xs" />

            <TextView
                android:id="@+id/viewPolizaNumber"
                style="@style/txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_xl"
                android:textSize="@dimen/txt_xs" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:paddingTop="@dimen/marginLayout">

            <TextView
                style="@style/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/viewPolicyDNI"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/txt_xs" />

            <TextView
                android:id="@+id/viewPolizaDniUser"
                style="@style/txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_xl"
                android:textSize="@dimen/txt_xs" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:visibility="gone"
            android:paddingTop="@dimen/marginLayout">

            <TextView
                android:id="@+id/viewPolizaNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/mid_blue"
                android:textSize="@dimen/txt_xs" />

            <TextView
                android:id="@+id/viewPolizaApellido"
                style="@style/txt"
                android:textColor="@color/mid_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_xl"
                android:textSize="@dimen/txt_xs" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:paddingTop="@dimen/marginLayout">

            <TextView
                style="@style/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/viewPolicyFechaVig"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/txt_xs" />

            <TextView
                android:id="@+id/viewPolizaFechaVig"
                style="@style/txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_xl"
                android:textSize="@dimen/txt_xs" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:paddingTop="@dimen/marginLayout">

            <TextView
                style="@style/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/viewPolicyDiasVig"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/txt_xs" />

            <TextView
                android:id="@+id/viewPolizaDiasVig"
                style="@style/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_xl"
                android:textSize="@dimen/txt_xs" />

            <TextView
                style="@style/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tvDurationTxt"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/txt_xs" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:paddingTop="@dimen/marginLayout">

            <TextView
                style="@style/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/viewPolizaTipoPoliza"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/txt_xs" />

            <TextView
                android:id="@+id/viewPolizaTipoPoliza"
                style="@style/txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_xl"
                android:textSize="@dimen/txt_xs" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:paddingTop="@dimen/marginLayout">

            <TextView
                style="@style/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/viewPolizaTipoPago"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/txt_xs" />

            <TextView
                android:id="@+id/viewPolizaTipoPago"
                style="@style/txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_xl"
                android:textSize="@dimen/txt_xs" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/marginLayout"
            android:background="@drawable/gradient_color"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                style="@style/about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txtAbout" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_eliminaPoliza"
            style="@style/btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginLayout4"
            android:background="@drawable/btn_style"
            android:text="@string/dpoliza_btn1"
            android:textColor="@color/colorPrimaryDark" />
    </LinearLayout>
</LinearLayout>
