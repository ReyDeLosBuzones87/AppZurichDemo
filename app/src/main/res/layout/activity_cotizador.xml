<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/padding_xl"
        tools:context="com.deuzex.seguros.activities.asegurado.CotizadorActivity">

        <TextView
            style="@style/txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cotizador_titulo"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/txt_l" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cotizador_seleccione"
                android:textColor="@color/black_stone"
                android:textSize="@dimen/txt_m" />

            <Spinner
                android:id="@+id/sp_cotizacion_tipo"
                style="@style/txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:entries="@array/poliza_array" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_cotizador_datos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cotizador_datos_titulo"
                android:textColor="@color/black_stone"
                android:textSize="@dimen/txt_m"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cotizador_datos_nombre"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/txt_m" />

                <EditText
                    android:inputType="textCapSentences"
                    android:id="@+id/et_cotizador_nombre"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cotizador_datos_apellido"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/txt_m" />

                <EditText
                    android:inputType="textCapSentences"
                    android:id="@+id/et_cotizador_apellido"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cotizador_datos_telefono"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/txt_m" />

                <EditText
                    android:id="@+id/et_cotizador_telefono"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="10"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cotizador_datos_email"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/txt_m" />

                <EditText
                    android:inputType="textEmailAddress"
                    android:id="@+id/et_cotizador_email"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_cotizador_hogar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                style="@style/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cotizador_propiedad_titulo"
                android:textColor="@color/black_stone"
                android:textSize="@dimen/txt_m"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cotizador_propiedad_localidad"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/txt_m" />

                <EditText
                    android:inputType="textCapSentences"
                    android:id="@+id/et_propiedad_localidad"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/padding_xl">

                <TextView
                    style="@style/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cotizador_propiedad_provincia"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/txt_m" />

                <Spinner
                    android:id="@+id/sp_provincia"
                    style="@style/txt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/provincias_array" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_cotizador_auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                style="@style/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cotizador_auto_titulo"
                android:textColor="@color/black_stone"
                android:textSize="@dimen/txt_m"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cotizador_auto_marca"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/txt_m" />

                <EditText
                    android:inputType="textCapSentences"
                    android:id="@+id/et_auto_marca"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cotizador_auto_modelo"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/txt_m" />

                <EditText
                    android:id="@+id/et_auto_modelo"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:inputType="textCapSentences" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cotizador_auto_año"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/txt_m" />

                <EditText
                    android:id="@+id/et_auto_año"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="4"
                    android:textAlignment="center" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_cotizador_vida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                style="@style/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cotizador_vida_titulo"
                android:textColor="@color/black_stone"
                android:textSize="@dimen/txt_m"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cotizador_vida_profesion"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/txt_m" />

                <EditText
                    android:inputType="textCapSentences"
                    android:id="@+id/et_cotizador_profesion"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cotizador_vida_suma"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/txt_m" />

                <EditText
                    android:id="@+id/et_cotizador_suma"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="6"
                    android:textAlignment="center" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cotizador_limpiar"
                style="@style/btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_style"
                android:text="@string/nusuario_btnlimpiar" />

            <Button
                android:id="@+id/btn_cotizador_siguiente"
                style="@style/btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_style"
                android:text="@string/btn_cotizador_siguiente" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>